<% content_for(:title, "Main Page") %>

<h1>All Posts</h1>

<ul>
  <% @posts.each do |post| %>
    <div>
      <%= link_to image_tag("grayarrow.gif"), new_post_vote_path(post) %>
      <%= link_to post.name, post.link %> (<%= post.link %>) |
      <%= link_to "View Post", post_path(post) %> |
      Posted: <em><%= time_ago_in_words(post.created_at) %> ago</em> |
      Upvotes: <strong><%= post.votes.length %></strong>
    </div>
  <% end %>
</ul>


