<%= render("layouts/errors", :object => @post) %>

<%= form_for(@post) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :link %>
    <%= f.text_field :link %>
  </div>
  <%= f.submit(:class => "btn btn-primary") %>
<% end %>
